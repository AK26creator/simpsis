---
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Layout/Sidebar';
import Header from '../components/Layout/Header';
import BottomNavigation from '../components/Layout/BottomNavigation';
import { LayoutDashboard, FileText, Users, User } from 'lucide-react';

interface Props {
  title?: string;
}

const { title = 'Admin Dashboard - SIMPSIS' } = Astro.props;

const navItems = [
  { icon: LayoutDashboard, label: 'Main', path: '/admin' },
  { icon: FileText, label: 'Reports', path: '/admin/reports' },
  { icon: FileText, label: 'Leave', path: '/admin/leave' },
  { icon: Users, label: 'Users', path: '/admin/users' },
  { icon: User, label: 'Profile', path: '/admin/profile' },
];
---

<BaseLayout title={title}>
  <div class="min-h-screen bg-gray-50 font-sans pb-16 lg:pb-0">
    <Sidebar client:load />
    
    <div class="transition-all duration-300 min-h-screen flex flex-col lg:ml-64">
      <Header client:load />
      
      <main class="p-4 sm:p-6 lg:p-8 flex-1">
        <div class="max-w-7xl mx-auto">
          <slot />
        </div>
      </main>
    </div>
    
    <BottomNavigation items={navItems} client:load />
  </div>
</BaseLayout>
