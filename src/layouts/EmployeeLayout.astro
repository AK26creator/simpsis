---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Layout/Header';
import BottomNavigation from '../components/Layout/BottomNavigation';
import { Home, FileText, Calendar, History, User } from 'lucide-react';

interface Props {
  title?: string;
}

const { title = 'Employee Portal - SIMPSIS' } = Astro.props;

const navItems = [
  { icon: Home, label: 'Feed', path: '/app' },
  { icon: FileText, label: 'Submit', path: '/app/submit' },
  { icon: Calendar, label: 'Leave', path: '/app/leave' },
  { icon: History, label: 'History', path: '/app/history' },
  { icon: User, label: 'Profile', path: '/app/profile' },
];
---

<BaseLayout title={title}>
  <div class="min-h-screen bg-gray-50 font-sans pb-16">
    <Header client:load />
    
    <main class="p-4 sm:p-6 lg:p-8">
      <div class="max-w-7xl mx-auto">
        <slot />
      </div>
    </main>
    
    <BottomNavigation items={navItems} client:load />
  </div>
</BaseLayout>
